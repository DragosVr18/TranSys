<UserControl x:Class="TranSys.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TranSys"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="120">
    <Grid>
        <ComboBox Name="HourComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="60" Height="30" FontSize="18"/>
        <ComboBox Name="MinuteComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="60" Height="30" Margin="60,0,0,0" FontSize="18"/>

    </Grid>
</UserControl>
